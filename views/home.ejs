          /* Engagement Section */
          .engagement-section {
            padding: 40px 20px;
            background-color: #fff;
            position: relative;
        }

        .engagement-section h2 {
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            color: #1a3c6d;
            margin-bottom: 16px;
        }

        .engagement-section p {
            text-align: center;
            font-size: 16px;
            color: #666;
            max-width: 800px;
            margin: 0 auto 32px;
            line-height: 1.6;
        }

        /* Grid Layout for Cards */
        .engagement-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
        }

        /* Card Styling */
        .engagement-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: left;
            transition: box-shadow 0.3s ease;
            border: 1px solid grey;
        }

        .engagement-card:hover {
            box-shadow: 10px 4px 16px rgba(0, 0, 0, 0.15);
            background-color: yellow;
        }

        .engagement-card img {
            display: block;
            width: 50px;
            height: 50px;
            margin: 0 auto 12px;
        }

        .engagement-card h3 {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 12px;
        }

        .engagement-card ul {
            list-style: none;
            padding: 0;
        }

        .engagement-card ul li {
            margin-bottom: 8px;
            font-size: 14px;
        }

        .engagement-card ul li a {
            color: #1a73e8;
            text-decoration: none;
            position: relative;
        }

        .engagement-card ul li a:hover {
            text-decoration: underline;
        }

        .engagement-card ul li a::before {
            content: "â€¢";
            color: #1a73e8;
            position: absolute;
            left: -12px;
        }

        /* Need Help? Ask Button */
        .need-help {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #1a73e8;
            color: #fff;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        .need-help:hover {
            background-color: #1557b0;
        }

        /* Background Image (Optional) */
        .engagement-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 300px;
            height: 100%;
            background: url('https://via.placeholder.com/300x400?text=Background+Image') no-repeat center;
            background-size: cover;
            opacity: 0.1;
            z-index: 0;
        }

        /* Ensure content is above the background */
        .engagement-section > * {
            position: relative;
            z-index: 1;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .engagement-grid {
                grid-template-columns: 1fr;
            }

            .need-help {
                position: static;
                display: block;
                margin: 20px auto 0;
                text-align: center;
            }
